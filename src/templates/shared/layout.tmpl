{% macro emit_css(bundle) %}
  {% assets bundle %}
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
    <link rel="stylesheet" href="{{ ASSET_URL }}">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/bootstrap-theme.min.css">
    <script src="/static/js/bootstrap.min.js"></script>
    <script src="/static/js/npm.js"></script>
    <script src="/static/js/jquery.min.js"></script>
  {% endassets %}
{% endmacro %}



<!DOCTYPE html>
<html>
  <head>
    <title>{% block title %}{% endblock %} - Doch√°zka SSPU-Opava</title>
    {{ emit_css("css_all") }}

    {% block styles %}
      {# template-specific styles which are not included in bundle go here #}
    {% endblock %}
  </head>
  <body>
    {% include "shared/_navbar.tmpl" %}
    <div class="container">
      {% include "shared/flash.tmpl" %}
      {% block content %}
        {# page content goes here #}
      {% endblock %}
    </div>
    {% block scripts %}
      {# template-specific scripts which are not included in bundle go here #}
    {% endblock %}
  </body>
</html>
