{% from "macros/fields.tmpl" import  render_input_field, render_password_field, render_checkbox_field, render_submit %}
{% extends "shared/layout.tmpl" %}

{% block title %}Přidání uživatele do skupiny{% endblock %}
{% block styles %}
    <script src="/static/js/jquery.js"></script>
    <script src="/static/js/bootstrap-transfer.js"></script>
	<link href="/static/css/bootstrap-transfer.css" rel="stylesheet">
{% endblock %}
{% block content %}
	<div id="test" style="width:400px">
	</div>


    <script>
		$(function() {
			var t = $('#test').bootstrapTransfer(
				{'target_id': 'multi-select-input',
				 'height': '15em',
				 'hilite_selection': true});

			t.populate([
                {% for user in users %}
                    {value:"1", content:"{{ user[1][2] }}"}
                {% endfor %}
			]);
			//t.set_values(["2", "4"]);
			//console.log(t.get_values());
		});
    </script>

{% endblock %}